<Window x:Class="Bai_tap_so_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid SizeChanged="typeSizeChanged">
        <Label Content="Primitive Data Types" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="86,10,0,0" Width="331" Height="59" FontSize="36"/>
        <Label Content="Choose a data types" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,89,0,0" Width="185" Height="38" FontSize="18"/>
        <Label Content="Sample value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="282,87,0,0" Width="135" Height="39" FontSize="18"/>
        <ListBox HorizontalAlignment="Left" Height="143" VerticalAlignment="Top" Width="100" Margin="51,139,0,0" FontSize="18">
            <ListBoxItem Content="int" FontSize="18" Selected="typeSelectionChanged"/>
            <ListBoxItem Content="char"/>
            <ListBoxItem Content="double"/>
            <ListBoxItem Content="long"/>
            <ListBoxItem Content="float"/>
        </ListBox>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="282,148,0,0"/>
        <Button x:Name="Quit" Content="Quit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="298,197,0,0" Click="QuitClick"/>

    </Grid>
</Window>
